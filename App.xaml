<Application x:Class="SCE_ProductionChain.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SCE_ProductionChain"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Grid}">
            <Setter Property="Background" Value="Black" />
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btnCalendar">
            <Setter Property="Background" Value="#00bebe" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00bebe" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btnStatistics">
            <Setter Property="Background" Value="#25be00" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#25be00" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btnMultiuser">
            <Setter Property="Background" Value="#be00a8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#be00a8" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btnExchangeHours">
            <Setter Property="Background" Value="#25be00" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#25be00" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="btnAcceptAndRefuse">
            <Setter Property="Background" Value="#4d4d4d" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4d4d4d" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblAcceptAndRefuse">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Grid}" x:Key="gdPrimaryColorCell">
            <Setter Property="Background" Value="#4d4d4d" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblTitle">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblTitleConfirm">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="Margin" Value="0,10,0,30" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblContent">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type StackPanel}" x:Key="spConfirmPage">
            <Setter Property="Margin" Value="75,0,0,0" />
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="tbConfirmPageContent">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="tbStatisticsTitle">
            <Setter Property="Width" Value="315" />
            <Setter Property="Margin" Value="20,20,0,0" />
            <Setter Property="FontSize" Value="38" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="tbStatisticsTitleLarge">
            <Setter Property="Width" Value="550" />
            <Setter Property="Margin" Value="20,20,0,0" />
            <Setter Property="FontSize" Value="38" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblStatisticsContent">
            <Setter Property="FontSize" Value="124" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Grid}" x:Key="gdUserName">
            <Setter Property="Width" Value="70" />
            <Setter Property="Height" Value="70" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblUsername">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,10,0" />
        </Style>
        <Style TargetType="{x:Type StackPanel}" x:Key="spUsernames">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Height" Value="70" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="{x:Type Grid}" x:Key="gdMultiuserMode">
            <Setter Property="Background" Value="#be00a8" />
        </Style>
        <Style TargetType="{x:Type Grid}" x:Key="gdExchangeHours">
            <Setter Property="Background" Value="#25be00" />
        </Style>
        <Style TargetType="{x:Type Grid}" x:Key="gdUserExit">
            <Setter Property="Background" Value="#b80000" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="lblTable">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        <Style TargetType="{x:Type Rectangle}" x:Key="rectTable">
            <Setter Property="Stroke" Value="White" />
            <Setter Property="Fill" Value="Transparent" />
            <Setter Property="StrokeThickness" Value="3" />
        </Style>
        <Style TargetType="{x:Type Image}" x:Key="imgNbPieces">
            <Setter Property="Source" Value="../Images/chart_nbPieces.png" />
            <Setter Property="Width" Value="508" />
            <Setter Property="Height" Value="287" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="{x:Type Image}" x:Key="imgEstimatedSalary">
            <Setter Property="Source" Value="../Images/chart_estimated_salary.png" />
            <Setter Property="Width" Value="515" />
            <Setter Property="Height" Value="287" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
    </Application.Resources>
</Application>
