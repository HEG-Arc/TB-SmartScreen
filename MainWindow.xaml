<Window x:Class="POC_GestureNavigation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:k="http://schemas.microsoft.com/kinect/2014"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POC_GestureNavigation"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1050"
        WindowState="Maximized">
    
    <k:KinectRegion Name="kinectRegion">
        <Grid>
            <Frame Name="frame" NavigationUIVisibility="Hidden" Margin="0,150,0,0"/>
            <Button Name="btnBack" Content="Back" FontSize="20" Height="150" Width="200" Click="btnBack_Click" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <k:KinectUserViewer Height="200" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Label Name="lblTime" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        </Grid>
    </k:KinectRegion>
</Window>
