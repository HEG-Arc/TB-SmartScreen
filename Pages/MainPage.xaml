<Page x:Class="POC_GestureNavigation.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POC_GestureNavigation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid>
        <StackPanel Width="640" Height="200" Orientation="Horizontal">
            <Button Width="200" Name="btnComponents" Content="Components" FontSize="20" Click="btnComponents_Click" />
            <Button Width="200" Name="btnImage" Margin="20,0,0,0" Content="Image" FontSize="20" />
            <Button Width="200" Name="btnObject" Margin="20,0,0,0" Content="Object" FontSize="20" />
        </StackPanel>
    </Grid>
</Page>
