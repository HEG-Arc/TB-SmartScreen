<Page x:Class="POC_MultiUserIdification_Collider.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POC_MultiUserIdification_Collider.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1000"
      Title="MainPage">

    <Grid Margin="200,50,200,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Nombre d'utilisateurs non-identifiés" FontWeight="Bold" FontSize="32"/>
                <Label Name="lblNbUnidentified" Content="52" FontSize="52" HorizontalAlignment="Center" Margin="0,20,0,0" />
                <Button Name="btnIdentify" Width="150" Height="100" Margin="0,50,0,0" Content="S'identifier" Click="btnIdentify_Click" />
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Utilisateurs identifiés" FontWeight="Bold" FontSize="32"/>
                <ListView Name="lvUsersIdentified" Margin="0,20,0,0" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
