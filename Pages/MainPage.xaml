<Page x:Class="POC_MultiUserIdentification.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POC_MultiUserIdentification.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage"
      KeepAlive="True">

    <Grid Margin="200,50,200,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Unidentified People" FontWeight="Bold" FontSize="32"/>
                <StackPanel Name="UnidentifedList" Margin="0,20,0,0">

                </StackPanel>
                <Button Name="btnIdentify" Width="150" Height="100" Margin="0,50,0,0" Content="Identify" Click="btnIdentify_Click" />
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Identified People" FontWeight="Bold" FontSize="32"/>
                <StackPanel Name="IdentifiedUsers" Margin="0,20,0,0">

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
