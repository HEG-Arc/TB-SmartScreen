<Page x:Class="POC_MultiUserIndification_Collider.Pages.IdentificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POC_MultiUserIndification_Collider.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="IdentificationPage">

    <Grid>
        <Label Name="lblError" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" FontSize="40" FontWeight="Bold" Foreground="Red"/>
        <Label Content="Veuillez présenter votre carte d'employé" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0" FontSize="40" FontWeight="Bold" />
        <StackPanel Width="640" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 50, 0, 0">
            <Grid>
                <Image Name="colorFrameImage" Height="360" Width="640" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Canvas Name="colorFrameCanvas" Height="360" Width="640" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <Label Name="lblUser" FontSize="32" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
